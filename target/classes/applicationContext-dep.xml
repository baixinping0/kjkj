<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans.xsd
		">
	<!-- Action -->
	<!-- 别忘了action对应的类应该配置scope   非单例 -->
	<bean id="depAction" class="com.bxp.kjkj.auth.action.DepAction" scope="prototype">
		<property name="depEbi" ref="depEbi"></property>
	</bean>
	<!-- Ebi -->
	<bean id="depEbi" class="com.bxp.kjkj.auth.service.impl.DepEbo">
		<property name="depDao" ref="depDao"/>
	</bean>
	<!-- Dao -->
	<bean id="depDao" class="com.bxp.kjkj.auth.dao.impl.DepImpl">
		<!-- 注入sessionFactory -->
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
</beans>	
	
